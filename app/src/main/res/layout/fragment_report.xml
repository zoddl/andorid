<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tag1"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:padding="@dimen/dp_5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tag2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:padding="@dimen/dp_5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />

        <FrameLayout
            android:id="@+id/fl_web_webview_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/report_status_"
                android:layout_marginBottom="@dimen/dp_90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate Report By Selecting Tags"
                android:layout_gravity="center"/>
        <WebView
            android:id="@+id/web_report"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_5"
            android:scaleType="centerCrop" />


        </FrameLayout>
    </LinearLayout>
</layout>